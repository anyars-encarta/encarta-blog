<div class="posts-container">
  <div class="users">
    <%= render 'shared/user', user:@user %>
  </div>

  <div class="posts">
    <% @posts.each_with_index do |post, index| %>
    <h3>Post #<%= index + 1 %></h3>
    <%= render 'shared/post', post: post, user:@user %>
  </div>

    <div class="posts-content">
      <h2 class='pagination'>Comments</h2>
      <%= render "shared/comments", comments:post.recent_comments %>
    </div>
    <% end %>
    <%=link_to 'Pagination', user_posts_path(@user), class: "pagination" %>
</div>
