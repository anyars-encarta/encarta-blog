<h1>Comment</h1>

<p>
  <strong>Body:</strong>
  <%= @comment.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @comment.user.email %>
</p>

<% if can?(:delete, comment) %>
  <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#delete-comment-modal">
    Delete
  </button>
<% end %>

<%= link_to 'Back', comments_path %>