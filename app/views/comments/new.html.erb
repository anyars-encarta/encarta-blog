<% stylesheet_link_tag('index')%>
<div class="comment-container">
  <h3>Add a new Comment</h3>
  <div class="comment-form">
  </div>
</div>



<h1>New Comment</h1>

<%= form_for(@comment) do |f| %>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Comment' %>
  </div>
<% end %>

<%= link_to 'Back', comments_path %>

