# user show.html.erb
<div class="show-page">
  <div class="users">
    <%= render 'shared/user', user:@user %>
  </div>

  <div class="bio">
    <h2>Bio</h2>
    <p><%= @user.bio %></p>
  </div>

  <div class="posts">
    <% @recent_posts.each_with_index do |post, index| %>
      <h3>Post #<%= index + 1 %></h3>
      <%= render 'shared/post', post:post, user:@user %>
    <% end %>
  </div>
  <%=link_to 'See all posts', user_posts_path(@user) %>
</div>